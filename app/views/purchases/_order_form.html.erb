<%= image_tag menu.file_location, class: "w-100 img-rounded mb-4" %>
<div class="row">
  <div class="col-xs-10 offset-xs-1 col-sm-10 offset-sm-1 mb-3">
    <div class="row">
      <% products.each do |product| %>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 border border-primary rounded mb-1" id="<%= product.id %>">
          <div class="d-flex justify-content-center align-items-center py-2">
            <div class="mr-auto title"><%= product.name %></div>
            <div class="price"><%= product.price %></div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="row pb-5 mb-5">
  <div class="col-sm-8 offset-sm-2">
    <%= form_for order do |f| %>
      <%= f.hidden_field :purchase_id, value: purchase.id %>
      <div id="order_items">
        <%= f.fields_for :order_items do |order_item| %>
          <%= render partial: "order_item_fields", locals:{ f: order_item } %>
        <% end %>
        <div class="links mb-3 text-center">
          <%= link_to_add_association "增加一項餐點", f, :order_items , class: "btn btn-primary w-50" %>
        </div>
      </div>
      <div class="links mb-3 text-center">
        <%= f.submit "送出訂購", class: "btn btn-primary w-50" %>
      </div>
    <% end %>
  </div>
</div>