<div class="container">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>日期</th>
            <th>分類</th>
            <th>訂餐名稱</th>
            <th>是否結束</th>
          </tr>
        </thead>
        <tbody>
          <% purchases.each do |purchase| %>
            <tr data-link="<%= show_orders_purchase_path(purchase) %>">
              <td><%= purchase.open_date.strftime("%Y-%m-%d") %></td>
              <td><%= purchase.menu.category.name %></td>
              <td><%= purchase.name %></td>
              <td><%= !purchase.is_enable %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
  $("tr[data-link]").click(function() {
    window.location = $(this).data("link")
  })
</script>