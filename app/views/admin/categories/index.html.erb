<div class="container">
  <div class="d-flex justify-content-center">
    <%= render partial: "admin/shared/navtab" %>
  </div>
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <div class="mt-3">
        <%= form_for [:admin, @category] do |f| %>
          <div class="input-group mb-3">
            <%= f.text_field :name, placeholder: "請輸入分類名稱", class: "form-control" %>
            <div class="input-group-append">
              <%= f.submit "送出", class: "btn btn-primary" %>
            </div>
          </div>
        <% end %>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th style="width: 40px;">ID</th>
            <th>名稱</th>
            <th class="text-center">處理</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each_with_index do |category, index| %>
            <tr>
              <td style="width: 40px;"><%= index + 1 %></td>
              <td><%= category.name %></td>
              <td style="width: 160px;" class="text-right">
                <%= link_to "編輯", admin_categories_path(id: category.id), class: "btn btn-primary" %>
                <%= link_to "刪除", admin_category_path(category), method: :delete, data: { confirm: "Are you Sure?" }, class: "btn btn-outline-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">編輯分類</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Modal body text goes here.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Save changes</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>